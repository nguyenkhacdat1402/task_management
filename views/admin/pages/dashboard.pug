extends ../layouts/default
include ../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(5000)
  .container-fluid.mt-4

    // ================= USER STATISTIC =================
    .row
      // TOTAL USER
      .col-md-4.mb-4
        .card.border-primary.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-primary
              i.fas.fa-users.mr-2
              | Total Users
            h2.font-weight-bold #{statistic.user.total}
            p.text-muted Tổng số người dùng

      // ACTIVE USER
      .col-md-4.mb-4
        .card.border-success.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-success
              i.fas.fa-user-check.mr-2
              | Active Users
            h2.font-weight-bold #{statistic.user.active}
            p.text-muted Người dùng chưa bị ban

      // BANNED USER
      .col-md-4.mb-4
        .card.border-danger.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-danger
              i.fas.fa-user-slash.mr-2
              | Banned Users
            h2.font-weight-bold #{statistic.user.inactive}
            p.text-muted Người dùng bị ban

    // ================= TASK STATISTIC =================
    .row
      // TOTAL TASK
      .col-md-4.mb-4
        .card.border-info.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-info
              i.fas.fa-tasks.mr-2
              | Total Tasks
            h2.font-weight-bold #{statistic.task.total}
            p.text-muted Tổng số task

      // FINISHED TASK
      .col-md-4.mb-4
        .card.border-success.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-success
              i.fas.fa-check-circle.mr-2
              | Finished Tasks
            h2.font-weight-bold #{statistic.task.finish}
            p.text-muted Task đã hoàn thành

      // PENDING TASK
      .col-md-4.mb-4
        .card.border-warning.shadow-sm.h-100
          .card-body.text-center
            h5.card-title.text-warning
              i.fas.fa-clock.mr-2
              | Pending Tasks
            h2.font-weight-bold #{statistic.task.pending}
            p.text-muted Task đang chờ xử lý
