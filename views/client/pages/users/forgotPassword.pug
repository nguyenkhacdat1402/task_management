extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .forgot-page(style='background-color: #f4f4f4; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px;')
    .container
      .row.justify-content-center
        .col-md-5.col-lg-4
          .card.shadow-sm(style='background-color: white; border: none; border-radius: 8px;')
            .card-body.p-4

              //- Header
              .text-center.mb-4
                h2.mt-3.mb-2.font-weight-bold.text-dark Forgot Password
                p.text-muted.mb-0 Enter your email to reset password

              //- Form
              form(action='/user/forgot-password' method='POST')
                .form-group
                  label.text-dark.font-weight-bold(for='email') Email
                  input#email.form-control(
                    type='email'
                    name='email'
                    placeholder='Enter your email'
                    required
                    style='border: 1px solid #ddd; padding: 12px;'
                  )

                button.btn.btn-primary.btn-block.mt-4(
                  type='submit'
                  style='padding: 12px; font-weight: bold;'
                ) Send Reset Link

              //- Back to login
              .text-center.mt-3
                p.text-dark.mb-0
                  | Remember password? 
                  a.font-weight-bold(href='/user/login' style='color: #007bff; text-decoration: none;') Login here
