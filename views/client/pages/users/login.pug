extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .login-page(style='background-color: #f4f4f4; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px;')
    .container
      .row.justify-content-center
        .col-md-5.col-lg-4
          .card.shadow-sm(style='background-color: white; border: none; border-radius: 8px;')
            .card-body.p-4
              
              //- Header
              .text-center.mb-4
                h2.mt-3.mb-2.font-weight-bold.text-dark Login
                p.text-muted.mb-0 Access your account
            
              //- Form
              form(action='/user/login' method='POST')
                
                //- Email
                .form-group
                  label.text-dark.font-weight-bold(for='email') Email
                  input#email.form-control(
                    type='email' 
                    name='email' 
                    placeholder='Enter your email'
                    required
                    style='border: 1px solid #ddd; padding: 12px;'
                  )
                
                //- Password
                .form-group.mt-3
                  label.text-dark.font-weight-bold(for='password') Password
                  input#password.form-control(
                    type='password' 
                    name='password' 
                    placeholder='Enter your password'
                    required
                    style='border: 1px solid #ddd; padding: 12px;'
                  )
                p.text-dark.mb-0.mt-1
                a.font-weight-bold(href='/user/forgot-password' style='color: #007bff; text-decoration: none;') Forgot your password?
                //- Submit Button
                button.btn.btn-primary.btn-block.mt-4(
                  type='submit'
                  style='padding: 12px; font-weight: bold;'
                ) Login
              
              //- Divider
              .text-center.my-3
                span.text-muted or
              
              //- Register + Forgot Password Links
              .text-center
                p.text-dark.mb-1
                  | Don't have an account? 
                  a.font-weight-bold(href='/user/register' style='color: #007bff; text-decoration: none;') Register here


