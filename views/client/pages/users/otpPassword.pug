extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .otp-page(style='background-color: #f4f4f4; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px;')
    .container
      .row.justify-content-center
        .col-md-5.col-lg-4
          .card.shadow-sm(style='background-color: white; border: none; border-radius: 8px;')
            .card-body.p-4

              //- Header
              .text-center.mb-4
                h2.mt-3.mb-2.font-weight-bold.text-dark OTP Verification
                p.text-muted.mb-0 Enter your email and the OTP sent to you

              //- Form
              form(action='/user/otp-password' method='POST')
                //- Email
                .form-group
                  label.text-dark.font-weight-bold(for='email') Email
                  input#email.form-control(
                    type='email'
                    name='email'
                    value= email
                    placeholder='Enter your email'
                    required
                    readonly
                    style='border: 1px solid #ddd; padding: 12px;'
                  )

                //- OTP
                .form-group.mt-3
                  label.text-dark.font-weight-bold(for='otp') OTP
                  input#otp.form-control(
                    type='text'
                    name='otp'
                    placeholder='Enter OTP code'
                    required
                    maxlength='8'
                    style='border: 1px solid #ddd; padding: 12px;'
                  )
                  small.form-text.text-muted.mt-1 If you didn't receive the code, check spam or resend.

                //- Submit Button
                button.btn.btn-primary.btn-block.mt-4(
                  type='submit'
                  style='padding: 12px; font-weight: bold;'
                ) Verify OTP

              //- Helpers
              .text-center.mt-3
                p.text-dark.mb-1
                  | Didn't receive OTP? 
                  a.font-weight-bold(href='/user/resend-otp' style='color: #007bff; text-decoration: none;') Resend
                p.text-dark.mb-0.mt-1
                  a.font-weight-bold(href='/user/login' style='color: #007bff; text-decoration: none;') Back to Login
