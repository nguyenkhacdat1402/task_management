extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .reset-password-page(style='background-color: #f4f4f4; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 20px;')
    .container
      .row.justify-content-center
        .col-md-5.col-lg-4
          .card.shadow-sm(style='background-color: white; border: none; border-radius: 8px;')
            .card-body.p-4

              //- Header
              .text-center.mb-4
                h2.mt-3.mb-2.font-weight-bold.text-dark Reset Password
                p.text-muted.mb-0 Enter your new password below

              //- Form
              form(action='/user/reset-password?_method=PATCH' method='POST')
                
                //- New Password
                .form-group
                  label.text-dark.font-weight-bold(for='password') New Password
                  input#password.form-control(
                    type='password'
                    name='password'
                    placeholder='Enter new password'
                    required
                    style='border: 1px solid #ddd; padding: 12px;'
                  )

                //- Confirm Password
                .form-group.mt-3
                  label.text-dark.font-weight-bold(for='confirmPassword') Confirm Password
                  input#confirmPassword.form-control(
                    type='password'
                    name='confirmPassword'
                    placeholder='Confirm new password'
                    required
                    style='border: 1px solid #ddd; padding: 12px;'
                  )

                //- Submit Button
                button.btn.btn-primary.btn-block.mt-4(
                  type='submit'
                  style='padding: 12px; font-weight: bold;'
                ) Update Password

              //- Back link
              .text-center.mt-3
                a.font-weight-bold(href='/user/login' style='color: #007bff; text-decoration: none;')
                  | Back to Login
