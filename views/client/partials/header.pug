header.shadow-sm(style='background-color: #f4f4f4;')
  nav.navbar.navbar-expand-lg.navbar-light(style='background-color: #f4f4f4;')
    .container-fluid
      //- Logo & Brand
      a.navbar-brand.font-weight-bold.text-dark(href='/task')
        i.fas.fa-tasks.mr-2
        | TaskManager
      
      //- User Profile hoặc Login/Register
      if user
        //- Nếu đã đăng nhập (có token/user)
        ul.navbar-nav.ml-auto
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.d-flex.align-items-center.text-dark(href='#' id='userDropdown' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              - const avatar = user.avatar ? user.avatar : 'https://static.vecteezy.com/system/resources/previews/009/734/564/original/default-avatar-profile-icon-of-social-media-user-vector.jpg';
              img.rounded-circle.mr-2(src=avatar alt='User Avatar' width='32' height='32')
              span.d-none.d-lg-inline= user.name
            .dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
              a.dropdown-item(href='/user/profile')
                i.fas.fa-user.mr-2
                | My Profile
              a.dropdown-item(href='/user/settings')
                i.fas.fa-cog.mr-2
                | Settings
              .dropdown-divider
              a.dropdown-item(href='/user/logout')
                i.fas.fa-sign-out-alt.mr-2
                | Logout
      else
        //- Nếu chưa đăng nhập (không có token)
        ul.navbar-nav.ml-auto
          li.nav-item
            a.btn.btn-outline-dark.mr-2(href='/user/login')
              i.fas.fa-sign-in-alt.mr-1
              | Login
          li.nav-item
            a.btn.btn-dark(href='/user/register')
              i.fas.fa-user-plus.mr-1
              | Register